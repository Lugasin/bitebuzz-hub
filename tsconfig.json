{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["vite/client"]
  },
  "include": [
    "src",
    "functions",
    "vite.config.ts",
    "tailwind.config.ts",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}